check process knife_<%= @application_name %>_server with pidfile <%= @deploy_to %>/shared/pids/knife.pid
  start program = "/bin/bash -c 'echo $$ > <%= @deploy_to %>/shared/pids/knife.pid; cd <%= @deploy_to %>/current; exec ./knife_<%= @application_name %>_server'"
  stop program = "/bin/bash -c '/bin/kill -TERM `cat <%= @deploy_to %>/shared/pids/knife.pid`'"
