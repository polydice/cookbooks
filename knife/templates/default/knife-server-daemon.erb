#!/bin/bash

case $1 in
  start)
    echo $$ > <%= @pid_file %>;
    exec 2>&1 <%= @release_path %>/knife_<%= @application_name %>_server 1>/tmp/knife.out;
    ;;
  stop)
    kill `cat <%= @pid_file %>`;;
  *)
  echo "usage: knife-<%= @application_name %>-server-daemon {start|stop|restart}" ;;
esac
exit 0
