#!/bin/bash

case $1 in
  start)
    cd <%= @release_path %>;
    echo $$ > <%= @pid_file %>;
    exec <%= @release_path %>/knife_<%= @application_name %>_server > /tmp/knife.out 2>&1;
    ;;
  stop)
    kill `cat <%= @pid_file %>`;;
  *)
  echo "usage: knife-<%= @application_name %>-server-daemon {start|stop|restart}" ;;
esac
exit 0
